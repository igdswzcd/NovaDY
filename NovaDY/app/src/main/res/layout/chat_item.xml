<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="5dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:id="@+id/chat_item_top">
    <TextView
        android:id="@+id/chat_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:textColor="@color/colorLightGrey"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_avatar_rl_left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/chat_item_top"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:id="@+id/chat_item_avatar_left"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/chat_item_avatar_rl_right"
        android:layout_toEndOf="@id/chat_item_avatar_rl_left"
        android:layout_below="@id/chat_item_top"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingEnd="40dp">
        <TextView
            android:id="@+id/ctr_item_msg_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:background="@drawable/yourchatbg"
            android:textColor="#000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/chat_item_avatar_rl_right"
        android:layout_toEndOf="@id/chat_item_avatar_rl_left"
        android:layout_below="@id/chat_item_top"
        android:gravity="end"
        android:paddingStart="40dp"
        android:paddingEnd="20dp">
        <TextView
            android:id="@+id/ctr_item_msg_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:background="@drawable/mychatbg"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_avatar_rl_right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/chat_item_top"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:id="@+id/chat_item_avatar_right"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>